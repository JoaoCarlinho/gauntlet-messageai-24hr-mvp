{
  "name": "backend",
  "version": "1.0.0",
  "description": "MessageAI Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc && npx prisma generate && npm run post-build",
    "post-build": "node -e \"const fs=require('fs'); if(fs.existsSync('dist/src/index.js')){fs.renameSync('dist/src/index.js','dist/index.js'); console.log('Moved dist/src/index.js to dist/index.js');}\"",
    "start": "node dist/index.js",
    "start:prod": "npm run migrate && node dist/index.js",
    "deploy:prod": "node dist/scripts/deploy.js && node dist/index.js",
    "emergency-fix": "node scripts/emergency-fix.js",
    "resolve-migrations": "node scripts/resolve-migration-state.js",
    "railway-fix": "node scripts/railway-fix.js",
    "immediate-fix": "node scripts/immediate-fix.js",
    "clean-slate": "node scripts/clean-slate-reset.js",
    "deploy:production": "node scripts/production-deploy.js",
    "post-redeploy": "node scripts/post-redeploy-setup.js",
    "emergency-recovery": "node scripts/emergency-recovery.js",
    "migrate": "npx prisma migrate deploy && npx prisma generate",
    "migrate:deploy": "node deploy-migration.js",
    "fix-db": "node fix-database.js",
    "start:railway": "npm run post-redeploy && npm start",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push",
    "postinstall": "npx prisma generate",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "messaging",
    "api",
    "nodejs",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "@types/multer": "^2.0.0",
    "@types/socket.io": "^3.0.1",
    "@types/uuid": "^10.0.0",
    "@aws-sdk/client-s3": "^3.0.0",
    "@aws-sdk/client-sqs": "^3.0.0",
    "@aws-sdk/s3-request-presigner": "^3.0.0",
    "@aws-sdk/types": "^3.0.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "expo-server-sdk": "^4.0.0",
    "express": "^4.21.2",
    "express-validator": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "socket.io": "^4.8.1",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.1",
    "nodemon": "^3.1.10",
    "prisma": "^6.17.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
